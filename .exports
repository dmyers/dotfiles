# Make code the default editor
export VISUAL="code -w"
export EDITOR="code -w"

# Larger bash history (allow 32Â³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE

# Enable zsh history file
#export HISTFILE=~/.zsh_history

# Larger zsh history
export SAVEHIST=$HISTSIZE

# Add timestamp to history (zsh)
# @see https://www.soberkoder.com/better-zsh-history/
#setopt EXTENDED_HISTORY

# Ignore duplicate commands in bash history
export HISTCONTROL=ignoredups

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Enable colors in CLI
export CLICOLOR=1

# Set colors for LS
export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

# Set brew make jobs
#export HOMEBREW_MAKE_JOBS=6

# Disable brew auto update
export HOMEBREW_NO_AUTO_UPDATE=1

# Disable brew analytics
export HOMEBREW_NO_ANALYTICS=1

# Disable brew env hints
export HOMEBREW_NO_ENV_HINTS=1

# Make new shells get the history lines from all previous
# shells instead of the default "last window closed" history
export PROMPT_COMMAND="history -a; $PROMPT_COMMAND"

# Use most pager
#export PAGER="most"

# Set rvmsudo up
export rvmsudo_secure_path=1

# Set Xdebug config to use VS Code
export XDEBUG_CONFIG="idekey=VSCODE"

# Set docker compose timeout
export COMPOSE_HTTP_TIMEOUT=200

# Remove PHP composer memory limit
export COMPOSER_MEMORY_LIMIT=-1
