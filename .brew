#!/usr/bin/env bash

# Make sure weâ€™re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade -all

# Tap more package sources
brew tap homebrew/binary
brew tap homebrew/completions
brew tap homebrew/dupes
brew tap homebrew/php
brew tap thoughtbot/formulae
brew tap neonichu/formulae
brew tap homebrew/versions
brew tap caskroom/versions

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils

# Install Bash 4
brew install bash

# Install more recent versions of some OSX tools
brew install homebrew/dupes/grep
brew install homebrew/dupes/openssh

# Install Cask to manage apps
brew install caskroom/cask/brew-cask

# Install other useful binaries
brew install wget
brew install grc
brew install man2html
brew install libiconv
brew install nmap
brew install httpie
brew install tree
brew install pstree
brew install htop-osx
brew install spoof-mac
brew install fail2ban
brew install icdiff
brew install archey
brew install gifify
brew install tor

# Install image optimizers
brew install advancecomp gifsicle jhead jpegoptim jpeg optipng pngcrush

# Install SSH tools
brew install ssh-copy-id
brew install stormssh
brew install sshuttle
brew install sshrc

# Install dev tools
brew install node
brew install python
brew install chswift
brew install composer
brew install git
brew install sqlite
brew install mysql
brew install rethinkdb
brew install influxdb chronograf
brew install redis
brew install elasticsearch
brew install gd
brew install mcrypt
brew install php55
brew install php55-geoip php55-mcrypt php55-xdebug php55-imagick php55-gmagick
brew install hub
brew install jq
brew install gitsh
brew install ievms
brew install geoip
brew install vegeta
brew install docker
brew install wrk
brew install mitmproxy
brew install heroku-toolbelt

# Install AWS tools
brew install awscli aws-elasticbeanstalk

# Install CLI completions
brew install bash-completion2
brew install grunt-completion
brew install docker-completion docker-machine-completion
brew install vagrant-completion
brew install wpcli-completion

# Remove outdated versions from the cellar
brew cleanup
